<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url(SfondoGioco.png); -fx-background-size: contain; -fx-background-repeat: repeat; -fx-background-position: center center;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gioco.MainController">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <fx:include fx:id="ovalPane" source="OvalPane.fxml" />
            <HBox alignment="CENTER" prefHeight="98.0" prefWidth="148.0" spacing="20.0" StackPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="mazzo" fitHeight="81.0" fitWidth="75.0" onMousePressed="#pescataInizialeGiocatore" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../../../RetroCarta.png" />
                     </image>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fitHeight="98.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../../../CardPosition.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </StackPane>
   </center>
   <bottom>
      <Button fx:id="turnButton" alignment="CENTER" contentDisplay="CENTER" onAction="#handleTurnButton" prefHeight="0.0" prefWidth="90.0" text="Cambia Turno" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="30.0" left="300.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
