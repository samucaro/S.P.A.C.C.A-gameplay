<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gioco.MainController">
   <BorderPane prefHeight="600.0" prefWidth="900.0">
      <center>
         <HBox prefHeight="600.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <children>
               <Pane HBox.hgrow="ALWAYS">
                  <children>
                     <fx:include fx:id="ovalPane" prefHeight="900.0" prefWidth="1300.0" source="OvalPane.fxml" />
                     <HBox layoutX="380.0" layoutY="161.0" prefHeight="98.0" prefWidth="148.0" spacing="20.0">
                        <children>
                           <ImageView fitHeight="81.0" fitWidth="75.0" onMousePressed="#pescataGiocatore" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                              <image>
                                 <Image url="@../../../RetroCarta.png" />
                              </image>
                              <HBox.margin>
                                 <Insets top="10.0" />
                              </HBox.margin>
                           </ImageView>
                           <ImageView fitHeight="98.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                              <image>
                                 <Image url="@../../../CardPosition.png" />
                              </image>
                           </ImageView>
                        </children>
                     </HBox>
                  </children>
               </Pane>
            </children>
         </HBox>
      </center>
      <bottom>
         <Button fx:id="turnButton" alignment="CENTER" contentDisplay="CENTER" onAction="#handleTurnButton" prefHeight="0.0" prefWidth="90.0" text="Cambia Turno" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
               <Insets bottom="30.0" left="300.0" />
            </BorderPane.margin>
         </Button>
      </bottom>
   </BorderPane>
</AnchorPane>
