<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url(BaseLogin.jpg); -fx-background-size: cover; -fx-background-repeat: no-repeat;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gioco.SetPlayerPageController">
   <center>
      <HBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ChoiceBox fx:id="numGiocatoriItem" prefWidth="150.0" />
            <ChoiceBox fx:id="numRobotItem" prefWidth="150.0" />
            <ScrollPane fx:id="setNomi" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS" HBox.hgrow="ALWAYS">
               <content>
                  <VBox fx:id="nomiGiocatori" alignment="TOP_CENTER">
                     <children>
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 1" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 2" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 3" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 4" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 5" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 6" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 7" visible="false" VBox.vgrow="ALWAYS" />
                        <TextField alignment="TOP_CENTER" disable="true" promptText="Giocatore 8" visible="false" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ScrollPane>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToTypeGamePage" text="Back" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="S.P.A.C.C.A">
                     <font>
                        <Font name="Game of Thrones" size="50.0" />
                     </font>
                     <stroke>
                        <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                           </stops>
                        </RadialGradient>
                     </stroke>
                     <effect>
                        <DropShadow>
                           <color>
                              <Color red="0.5723684430122375" green="0.5286458134651184" blue="0.5286458134651184" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Text>
                  <ImageView fitHeight="135.0" fitWidth="135.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" smooth="false" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../../../logo.png" />
                     </image>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" height="64.72" radius="33.68" width="72.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </DropShadow>
                     </effect>
                  </ImageView>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="8.0" top="8.0" />
         </padding>
      </VBox>
   </top>
   <bottom>
      <VBox alignment="CENTER" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="outputText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-effect: dropshadow( gaussian, rgba(0,0,250,0.8), 10 , 0 , 0 , 2 );" textAlignment="CENTER" visible="false" wrappingWidth="211.685546875" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="codice" alignment="CENTER" prefWidth="102.0" promptText="codice partita" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="100.0" right="200.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="saveLogout" disable="true" mnemonicParsing="false" onAction="#switchToAdminPlayerPage" text="Save &amp; Logout" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="65.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets right="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="25.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
</BorderPane>
