<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url(BaseLogin.jpg); -fx-background-size: cover; -fx-background-repeat: no-repeat;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gioco.SetGamePageController">
   <top>
      <HBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="S.P.A.C.C.A" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Game of Thrones" size="50.0" />
               </font>
               <stroke>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </stroke>
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.5723684430122375" green="0.5286458134651184" blue="0.5286458134651184" />
                     </color>
                  </DropShadow>
               </effect>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Text>
            <ImageView fitHeight="135.0" fitWidth="135.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" smooth="false" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../../../logo.png" />
               </image>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="64.72" radius="33.68" width="72.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </DropShadow>
               </effect>
            </ImageView>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <padding>
      <Insets top="50.0" />
   </padding>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="list" editable="true" HBox.hgrow="ALWAYS" />
            <AnchorPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="g1" alignment="CENTER" layoutX="26.0" layoutY="2.0" promptText="Nome Giocatore 1" visible="false" />
                  <TextField fx:id="g2" alignment="CENTER" layoutX="26.0" layoutY="27.0" promptText="Nome Giocatore 2" visible="false" />
                  <TextField fx:id="g3" alignment="CENTER" layoutX="26.0" layoutY="52.0" promptText="Nome Giocatore 3" visible="false" />
                  <TextField fx:id="g4" alignment="CENTER" layoutX="26.0" layoutY="74.0" promptText="Nome Giocatore 4" visible="false" />
                  <TextField fx:id="g5" alignment="CENTER" layoutX="26.0" layoutY="99.0" promptText="Nome Giocatore 5" visible="false" />
                  <TextField fx:id="g6" alignment="CENTER" layoutX="26.0" layoutY="124.0" promptText="Nome Giocatore 6" visible="false" />
                  <TextField fx:id="g7" alignment="CENTER" layoutX="26.0" layoutY="149.0" promptText="Nome Giocatore 7" visible="false" />
                  <TextField fx:id="g8" alignment="CENTER" layoutX="26.0" layoutY="174.0" promptText="Nome Giocatore 8" visible="false" />
               </children>
            </AnchorPane>
            <VBox alignment="CENTER" spacing="30.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToGamePage" text="Strart" />
                  <Button alignment="BASELINE_RIGHT" mnemonicParsing="false" onAction="#switchToAdminPlayerPage" text="Back" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="25.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
